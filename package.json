{
	"name": "@corioders/projects-manager",
	"version": "1.0.0",
	"description": "Corioders' projects management tool",
	"repository": "https://github.com/corioders-templates/projects-manager.git",
	"author": "corioders",
	"license": "CC0-1.0",
	"scripts": {
		"postinstall": "husky install",
		"clean": "rm -rf out",
		"watch": "tsc --watch & tsc-alias --watch --silent & nodemon --quiet --ext ts --watch src --exec 'eslint .'",
		"build": "yarn run clean && tsc && yarn run lint && tsc-alias && yarn run makeExecutable",
		"lint": "eslint .",
		"release": "yarn run build && yarn run movePackageJson && cd out && npm publish --access public",
		"makeExecutable": "chmod +x ./out/bin/corioders.js",
		"movePackageJson": "cat ./package.json | json -e 'delete this.scripts; delete this.devDependencies' > ./out/package.json"
	},
	"bin": {
		"corioders": "./out/bin/corioders.js"
	},
	"devDependencies": {
		"@babel/eslint-parser": "^7.14.7",
		"@commitlint/cli": "^12.1.4",
		"@trivago/prettier-plugin-sort-imports": "^2.0.2",
		"@types/graceful-fs": "^4.1.5",
		"@types/inquirer": "^7.3.3",
		"@types/node": "^16.3.2",
		"@typescript-eslint/eslint-plugin": "^4.28.3",
		"@typescript-eslint/parser": "^4.28.3",
		"commitlint-config-jira": "^1.5.1",
		"commitlint-plugin-jira-rules": "^1.5.1",
		"eslint": "^7.30.0",
		"husky": "^7.0.1",
		"json": "^11.0.0",
		"nodemon": "^2.0.12",
		"prettier": "^2.3.2",
		"tsc-alias": "^1.3.7",
		"typescript": "^4.3.5"
	},
	"dependencies": {
		"@corioders/nodekit": "^0.0.5",
		"axios": "^0.21.1",
		"base64url": "^3.0.1",
		"commander": "^8.0.0",
		"graceful-fs": "^4.2.6",
		"inquirer": "^8.1.2",
		"simple-git": "^2.41.1",
		"tapable": "^2.2.0"
	}
}
